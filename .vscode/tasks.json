{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/RGProject/bin/Debug/net8.0"
            },
            "args": [
                "build",
                "${workspaceFolder}/RGProject.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/RGProject/bin/Debug/net8.0"
            },
            "args": [
                "publish",
                "${workspaceFolder}/RGProject.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "options": {
                "cwd": "${workspaceFolder}/RGProject/bin/Debug/net8.0"
            },
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/RGProject.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/RGProject/bin/Debug/net8.0"
            },
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/RGProject/FantasyRPG.csproj"
            ],
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": ["$msCompile"]
        },
        {
            "label": "run (external)",
            "command": "alacritty",
            "options": {
                "cwd": "${workspaceFolder}/RGProject/bin/Debug/net8.0"
            },
            "type": "process",
            "args": [
                "--hold",
                "-e",
                "dotnet",
                "run",
                "--project",
                "${workspaceFolder}/RGProject/FantasyRPG.csproj"
            ],
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": ["$msCompile"]
        }
    ]
}
